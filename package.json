{
    "name": "toreality",
    "description": "A new Ghost theme based on `Wave`",
    "version": "0.0.2",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
        "author": {
            "name": "vonhyou",
            "email": "vonhyou@yeah.net",
            "url": "https://blog.lenva.tech"
        },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 5,
        "image_sizes": {
            "1x": {
                "width": 150,
                "height": 150
            },
            "2x": {
                "width": 300,
                "height": 300
            },
            "3x": {
                "width": 450,
                "height": 450
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "lint": "gulp lint",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "autoprefixer": "^9.0.0",
        "beeper": "2.1.0",
        "cssnano": "4.1.10",
        "gscan": "3.6.1",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.0",
        "gulp-stylelint": "13.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.0.2",
        "postcss-easy-import": "3.0.0",
        "pump": "3.0.0",
        "stylelint": "13.8.0",
        "stylelint-config-standard": "20.0.0",
        "stylelint-order": "4.1.0"
    }
}
